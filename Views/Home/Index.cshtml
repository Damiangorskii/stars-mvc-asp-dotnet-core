@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-3 font-weight-bold">Welcome to the Stars Database!</h1>
    <p class="lead mt-4">Explore the universe and discover fascinating information about different stars.</p>
    <a class="btn btn-primary btn-lg mt-4" asp-controller="stars" role="button">Browse Stars</a>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Learn About Stars</h5>
                <p class="card-text">Discover the secrets of stars, their types, sizes, and much more.</p>
                <a href="#" class="btn btn-secondary">Learn More</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Interactive Galaxy Map</h5>
                <p class="card-text">Navigate through our interactive galaxy map and find stars with ease.</p>
                <a href="#" class="btn btn-secondary">Explore</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Share Your Knowledge</h5>
                <p class="card-text">Have knowledge about a star that we don't? Share it with our community.</p>
                <a href="#" class="btn btn-secondary">Contribute</a>
            </div>
        </div>
    </div>
</div>
